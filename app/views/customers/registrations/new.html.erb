<div class="container">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-9">

      <div class="customer-signup">
        <p class="customer-signup-text">新規会員登録</p>
      </div>
    
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group row">
            <%= f.label :名前, class: "col-sm-4" %>
            <%= f.text_field :last_name, class: "col-sm-3" %>
            <%= f.text_field :first_name, class: "col-sm-offset-1 col-sm-3" %>
          </div>

          <div class="form-group row">
            <%= f.label :フリガナ, class: "col-sm-4" %>
            <%= f.text_field :last_name_kana, class: "col-sm-3" %>
            <%= f.text_field :first_name_kana, class: "col-sm-offset-1 col-sm-3" %>
          </div>

          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-sm-4" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6" %>
          </div>

          <div class="form-group row">
            <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-4" %>
            <%= f.text_field :postcode, class: "col-sm-6", name: "zip11", maxlength: "8", onKeyUp: "AjaxZip3.zip2addr(this,'','addr11','addr11');" %>
          </div>

          <div class="form-group row">
            <%= f.label :住所, class: "col-sm-4" %>
            <%= f.text_field :address, class: "col-sm-6", name: "addr11" %>
          </div>

          <div class="form-group row">
            <%= f.label :電話番号（ハイフンなし）, class: "col-sm-4" %>
            <%= f.text_field :tel, class: "col-sm-6" %>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード（６文字以上）, class: "col-sm-4" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-6" %>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード（確認用）, class: "col-sm-4" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-6" %>
          </div>

          <div class="actions">
            <button class="log-in btn btn-success col-sm-offset-5 col-sm-3" type="submit">新規登録</button>
          </div>
        <% end %>
    </div>

    <div class="col-sm-offset-1 col-sm-9">
      <div class="customer-login">
        <p class="customer-login-text">既に登録済みの方</p>
      </div>

      <div class="col-sm-offset-1">
         <p class="customer-signin-path">
          <%=link_to 'こちら', new_customer_session_path %>からログインしてください。</p>
      </div>

    </div>
  </div>
</div>
