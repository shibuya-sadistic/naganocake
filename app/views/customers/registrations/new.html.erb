<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10">

      <p class="customer-signup">新規会員登録</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前 %>
            <span>(姓)</span>
            <%= f.text_field :last_name %>
            <span>(名)</span>
            <%= f.text_field :first_name %>
          </div>

          <div class="field">
           <%= f.label :フリガナ %>
           <span>(セイ)</span>
           <%= f.text_field :last_name_kana %>
           <span>(メイ)</span>
           <%= f.text_field :first_name_kana %>
         </div>

         <div class="field">
           <%= f.label :郵便番号（ハイフンなし） %>
           <%= f.text_field :postcode %>
         </div>

         <div class="field">
           <%= f.label :住所 %>
           <%= f.text_field :address, size: 60 %>
         </div>

         <div class="field">
           <%= f.label :電話番号（ハイフンなし） %>
           <%= f.text_field :tel %>
         </div>

         <div class="field">
           <%= f.label :メールアドレス %>
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>

         <div class="field">
           <%= f.label :パスワード（６文字以上） %>
<!--     <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %> -->
           <%= f.password_field :password, autocomplete: "new-password" %>
         </div>

         <div class="field">
           <%= f.label :パスワード（確認用） %>
           <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
         </div>

         <div class="actions">
           <button class="log-in btn btn-success" type="submit">新規登録</button>
         </div>
       <% end %>

       <p class="customer-login">既に登録済みの方</p>

       <p><%=link_to 'こちら', new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>
