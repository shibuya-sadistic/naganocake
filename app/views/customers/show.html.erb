<div class="container">
	<div class="row">
		<h2>マイページ</h2>
		<div class="info" style="margin-bottom: 20px;">
			<h3 style="display: inline-block;vertical-align: middle;" >登録情報</h3>
			<%= link_to "編集する", edit_customer_registration_path, class: "btn btn-primary", style: "display: inline-block;vertical-align: middle;margin-left:10px;" %>
			<%= link_to "パスワードを変更する", password_edit_path, class: "btn btn-primary", style: "display: inline-block;vertical-align: middle;margin-left:10px;" %>
		</div>
		<table class="table table-bordered">
			<tbody>
				<tr>
					<th class="active">氏名</th>
					<td><%= @customer.last_name %> <%= @customer.first_name %></td>
				</tr>
				<tr>
					<th class="active">カナ</th>
					<td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
				</tr>
				<tr>
					<th class="active">郵便番号</th>
					<td><%= @customer.postcode %></td>
				</tr>
				<tr>
					<th class="active">住所</th>
					<td><%= @customer.address %></td>
				</tr>
				<tr>
					<th class="active">電話番号</th>
					<td><%= @customer.tel %></td>
				</tr>
				<tr>
					<th class="active">メールアドレス</th>
					<td><%= @customer.email %></td>
				</tr>
			</tbody>
		</table>
		<div class="address">
			<h3 style="display: inline-block;vertical-align: middle;" >配送先</h3>
			<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary", style: "display: inline-block;vertical-align: middle;margin-left: 4.5rem;" %>
		</div>
		<div class="order">
			<h3 style="display: inline-block;vertical-align: middle;" >注文履歴</h3>

			<%= link_to "一覧を見る", orders_path, class: "btn btn-primary", style: "display: inline-block;vertical-align: middle;margin-left: 2rem;" %>
      
		</div>
	</div>
</div>