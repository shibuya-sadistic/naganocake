<div class = "container">
<div class = "row">
	<div class = "col-xs-12">
<h1>ショッピングカート</h1>
<ul><%=link_to "カートを空にする",
destroy_all_path, method: :delete, class: 'btn btn-denger' %></ul>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% totalprice = 0 %>
		<% @cart_items.each do |cart_item| %>
		<% totalprice += (((cart_item.product.price*1.1).round)*cart_item.piece ) %>
		<tr>
			<td>
				<%= cart_item.product.name  %></td>
			<td><%= (cart_item.product.price*1.1).round %></td>
			<td><%= form_for cart_item, url:cart_item_path(cart_item)do |f|  %>
			<%= f.number_field :piece,min:1,max:100 %>
			<%= f.submit '変更',class: 'btn btn-primary' %>
			<% end %>
			</td>
			<td><%= ((cart_item.product.price*1.1).round)*cart_item.piece %>
			</td>
			<td><%= link_to "削除する",cart_item_path(cart_item.id),method: :delete, class: "btn btn-danger" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class ="col-xs-8">
	<span>
	<%= link_to "買い物を続ける",root_path,class: "btn btn-primary" %>
	</span>
</div>
<div class = "col-xs-4">
	<table class = "table table-bordered">
	<tr>
		<td>合計金額 <%= totalprice %>円 </td>
	</tr>
	</table>
	<span><%=link_to "情報入力に進む",new_order_path, class: "col-xs-12 btn btn-succes"%>
	</span>
</div>
