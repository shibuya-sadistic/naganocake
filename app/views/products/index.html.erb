<div class="container mt-4">
	<div class="row">
		<div class="col-xs-3">
			<div class="panel panel-default" style="margin-top: 20px;">
			  	<div class="panel-heading">ジャンル検索</div>
			  	<ul class="list-group">
				  	<% @genres.each do |genre| %>
				      <li class="list-group-item">
				      	<%= link_to genre.name, products_path(genre_id: genre.id), class: "" %>
				      </li>
				    <% end %>
			  	</ul>
			</div>
		</div>
		<div class="col-xs-9">
			<div class="row recommend-products">
				<%# genre = Genre.where(status: true) %>
				<%# product = Product.all %>
				<%# @products = genre.product %>
				<%# @products = Product.where(status: true) %>

				<h3 class="col-xs-12">商品一覧（全<%= @preproducts.count %>件）</h3>
				<% @products.each do |product| %>
				<%# if product.genre.status == true %>
					<div class="product col-xs-3">
						<%= link_to product, class: "" do %>
							<%= attachment_image_tag product, :image, :fill, 150, 150, format: 'jpeg', fallback: 'no_image.jpg', size: '150x150' %>
						<% end %>
						<h4><%= link_to product.name, product, class: "" %></h4>
						<p>￥<%= product.price %></p>
					</div>
				<% end %>
				<%# end %>
				<div class="col-xs-12">
					<div style="text-align: center;">
						<%= paginate @products, class: "paginate" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>