<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-md-4" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "display: inline-block; width:auto;" %>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード, class: "col-md-4" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control",style: "display: inline-block; width:auto;" %>
          </div>

          <div class="actions">
            <button class="log-in btn btn-info col-md-offset-4" type="submit">ログイン</button>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

