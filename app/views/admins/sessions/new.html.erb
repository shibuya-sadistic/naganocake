<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-xs-6">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-sm-4" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6" %>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード, class: "col-sm-4" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-6" %>
          </div>

          <div class="actions">
            <button class="log-in btn btn-info col-sm-offset-5 col-sm-3" type="submit">ログイン</button>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

