<div class="container">
  <div class="row">
    <h3>ジャンル追加・一覧画面</h3>
  </div>

  <div class="row genre-index">
    <div class="col-sm-6">
      <%= form_with(model: [ :admins, @genre ]) do |f| %>

          <div class="form-group">
            <%= f.label :ジャンル, class: "col-sm-2" %>
            <%= f.text_field :name, class: "col-sm-2" %>
            <%= f.radio_button :status, :true %>
            <%= f.label :status, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :status, false %>
            <%= f.label :status, "無効", {value: :false, style: "display: inline-block;"}%>

            <button class="btn btn-info" type="submit">追加</button>
          </div>
    <% end %>
   </div>
  </div>

  <div class="row">
    <div class="col-sm-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><% if genre.status == true %>
              有効
              <% else %>
              無効
              <% end %>
              </td>
              <td>
              <%= link_to edit_admins_genre_path(genre) do%>
              <button class="btn btn-info col-sm-offset-1" type="submit">編集する</button>
              <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
