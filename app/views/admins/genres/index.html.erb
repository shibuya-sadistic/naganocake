<div class="container">
    <div class="row">
        <h3>ジャンル追加・一覧画面</h3>
            <div class="col-xs-12 col-md-8">
                <%= form_with(model: [ :admins, @genre ]) do |f| %>

                  <div class="form-group">
                    <%= f.label :ジャンル, class: "col-md-2" %>
                    <%= f.text_field :name, class: "col-md-2" %>
                    
                    <%= f.radio_button :status, :true %>
                    <%= f.label :status, "有効", {value: :true} %>
                    <%= f.radio_button :status, false %>
                    <%= f.label :status, "無効", {value: :false}%>
                    <button class="btn btn-info" type="submit">追加</button>
                  </div>

                <% end %>
            </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-5">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-md-5">ジャンル</th>
                        <th class="col-md-2">状態</th>
                        <th class="col-md-4"></th>
                    </tr>
                </thead>
                <tbody>
                <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.name %></td>
                      <td><% if genre.status == true %>
                      有効
                      <% else %>
                      無効
                      <% end %>
                      </td>
                      <td><%= link_to edit_admins_genre_path(genre) do%>
                          <button class="btn btn-info col-sm-offset-1" type="submit">編集する</button>
                          <% end %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

