<div class="container">
	<div class="row">
		<h2>注文一覧画面</h2>
	</div>

	<div class="row">
			<div class="col-sm-offset-1 col-sm-10">
				<table class="table">
			  		<thead>
	    			  <tr>
	    			  	<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					  </tr>
				  	</thead>

				  	<tbody>
		 			  <% @orders.each do |order| %>
						<tr>
							<td><%= link_to admins_order_path(order) do %>
								<%= order.created_at.strftime("%Y/%m/%d %H:%M:%S ") %><% end %>
							</td>
							<td><%= order.customer.last_name %>
								<%= order.customer.first_name %>
							</td>
							<td><%= order.order_items.pluck(:piece).sum %></td>
							<td><%= order.status %></td>
						</tr>
					  <% end %>

				  	</tbody>
				</table>
			</div>
		</div>

		<div class="col-sm-offset-4 col-sm-4">
			<%= paginate @orders, class: "paginate" %>
		</div>

