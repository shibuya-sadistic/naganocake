	<div class="row">
		<h3>注文一覧画面</h3>
		<div class="col-xs-12 col-md-8 col-md-offset-2">
			<table class="table table-hover">
		  		<thead>
	    			<tr class="active">
	    		  		<th class="col-sm-3">購入日時</th>
						<th class="col-sm-2">購入者</th>
						<th class="col-sm-2">注文個数</th>
						<th class="col-sm-3">注文ステータス</th>
					</tr>
				</thead>

				<tbody>
		 			<% @orders.each do |order| %>
						<tr>
							<td><%= link_to admins_order_path(order) do %>
								<%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %><% end %>
							</td>
							<td><%= order.customer.last_name %>
								<%= order.customer.first_name %>
							</td>
							<td><%= order.order_items.pluck(:piece).sum %></td>
							<td><%= order.status_i18n %></td>
						</tr>
					<% end %>
			  	</tbody>
			</table>
		</div>

		<div class="col-xs-12">
			<div class="" style="text-align: center;">
				<%= paginate @orders, class: "paginate" %>
			</div>
		</div>
	</div>
</div>
