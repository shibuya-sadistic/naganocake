<div class="container">
  <div class="row">
      <h4>商品一覧画面</h4>
    </div>
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10">
        <table class="table">
            <thead>
              <tr>
            <th class="index">商品ID</th>
            <th class="index">商品名</th>
            <th class="index">税抜価格</th>
            <th class="index">ジャンル</th>
            <th class="index">ステータス</th>
            </tr>
            </thead>

            <tbody>
            <% if @products.present? %>
            <% @products.each do |product| %>
            <tr>
              <td class="index"><%= product.id %></td>
              <td class="product-name">
                <%= link_to admins_product_path(product) do %><%= product.name %><% end %>
              </td>

              <td class="index"><%= product.price %></td>
              <td class="index"><%= product.genre.name %></td>
              <td class="index">
                <% if product.status == true %>
                          販売中
                        <% else %>
                          販売停止中
                        <% end %>   
                      </td>
            </tr>
            <% end %>
            <% end %>

            </tbody>
        </table>
      </div>

      <div class="col-sm-offset-4">
        <%= paginate @products, class: "paginate" %>
      </div>
    </div>
</div>
