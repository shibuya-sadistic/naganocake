<div class="container">
	<div class="row">
		<h5>商品　新規登録画面</h5>
 	</div>

 	<%= form_for :post, url: '/admins/products' do |f| %>

 	<div class="row">

		<div class="col-sm-offset-1 col-sm-3 product-image">
	  		<h2>画像フォーム</h2>
	 	</div>

	  	<div class="col-sm-5">

  	  		<div class="form-group row">
  	  			<label for="name" class="col-sm-4 col-form-label">商品名</label>
  	  			<div class="col-sm-8">
  	  				<input type="text" class="form-control-sm" name="name">
  	  			</div>
  	  		</div>

  	  		<div class="form-group row">
  		  		<label for="introduction" class="col-sm-4 col-form-label">商品説明</label>
  	  			<div class="col-sm-8">
  	  				<textarea class="form-control-sm" name="introduction"></textarea>
	  	  		</div>
  			</div>

	  		<div class="form-group row">
  			  	<label for="introduction" class="col-sm-4 col-form-label">ジャンル</label>
  	  			<div class="col-sm-8">
  	  				<select name="genre_id">
  	  					<option value="">選択してください</option>
  		  				<option value="0">ケーキ</option>
  	  					<option value="1">プリン</option>
  	 	 				<option value="2">焼き菓子</option>
  	  					<option value="3">キャンディ</option>
  	  				</select>
  		  		</div>
  		  	</div>
  	 

	  	  	<div class="form-group row">
  		  		<label for="price" class="col-sm-4 col-form-label">税抜価格</label>
  	  			<div class="col-sm-8">
  	  				<input type="text" class="form-control-sm" name="price"> 円
  	  			</div>
  	 	  	</div>

  	  	  	<div class="form-group row">
	  		  	<label for="introduction" class="col-sm-4 col-form-label">販売ステータス</label>
  		  		<div class="col-sm-8">
  	  				<form>
  	  					<select name="status">
  	  						<option value="">選択してください</option>
  	 	 				<option value="1">販売中</option>
  	  					<option value="2">販売停止中</option>
  	  					</select>
  	  				</form>
  	  			</div>
		  	</div>
	  	</div>


      	<div class="row">
  			<div class="col-sm-offset-10 col-sm-2 button">
  				<button class="btn btn-info" type="submit">新規登録</button>

    		</div>
  	  	</div>

  	<% end %>
	</div>
</div>



