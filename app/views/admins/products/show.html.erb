<% price = @product.price * 1.1 %>
    <div class="container">
        <div class="row">
            <h3 class="admin-product">商品　詳細画面</h3>
            <div class="col-xs-6 col-md-offset-1 col-md-3">
                <%= attachment_image_tag @product, :image, :fill, 200, 150, format: 'jpeg', fallback: 'no_image.jpg', size: '200x150' %>
            </div>

            <div class="col-xs-6 col-md-offset-1 col-md-4">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>商品名</th>
                            <td><%= @product.name %></td>
                        </tr>
                        <tr>
                            <th>商品説明</th>
                            <td><%= @product.introduction %></td>
                        </tr>
                        <tr>
                            <th>ジャンル</th>
                            <td><%= @product.genre.name %></td>
                        </tr>
                        <tr>
                            <th>税込価格（税抜価格）</th>
                            <td><%= @product.price %> (<%= price.round %>) 円</td>
                        </tr>
                        <tr>
                            <th>販売ステータス</th>
                            <td><% if @product.status == true %>
                            販売中
                            <% else %>
                            販売停止中
                            <% end %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-xs-12 col-md-offset-10 col-md-2">
                <%= link_to edit_admins_product_path do%>
                <button class="btn btn-info" type="submit">編集する</button>
                <% end %>
            </div>
        </div>
    </div>

