	<div class="row">
  		<h3 class="product-index">商品一覧画面</h3>
  			<%= link_to new_admins_product_path do %>
  				<button class="btn btn-default rounded-circle p-0 new-btn" style="width:3.5rem;height:3.5rem;">+</button>
  			<% end %>

		<div class="col-xs-12 col-md-8 col-md-offset-2">
			<table class="table table-hover table-striped">
		  		<thead>
    				<tr class="active">
						<th class="index">商品ID</th>
						<th class="index">商品名</th>
						<th class="index">税抜価格</th>
						<th class="index">ジャンル</th>
						<th class="index">ステータス</th>
					</tr>
				 </thead>

				 <tbody>
		 			  <% @products.each do |product| %>
		 			  <% if product.genre.status == true %>
						<tr>
							<th class="index"><%= product.id %></th>
							<td>
								<%= link_to admins_product_path(product) do %><%= product.name %><% end %>
							</td>
							<td><%= product.price.to_s(:delimited) %></td>
							<td><%= product.genre.name %></td>
							<td><% if product.status == true %>
					                販売中
                				<% else %>
                					販売停止中
                				<% end %>
                			</td>
						</tr>
					  <% end %>
					  <% end %>
				  </tbody>
			</table>
		</div>

		<div class="col-xs-12">
			<div class="" style="text-align: center;">
				<%= paginate @products, class: "paginate" %>
			</div>
		</div>
	</div>
</div>

<%= link_to " ログアウト", destroy_admin_session_path, method: :delete %>