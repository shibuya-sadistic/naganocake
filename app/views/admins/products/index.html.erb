<div class="container">
  <div class="row">
    <div class="col-xs-10">

		<h5>商品一覧画面</h5>
			<div class="row">
				<div class="col-sm-offset-1 col-sm-10">
				<table class="table">
				  <thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				  </thead>

				  <tbody>
					  <% if @products.present? %>
		 			  <% @products.each do |product| %>
						<tr>
							<td><%= product.id %></td>
							<td><%= product.price %></td>
							<td><%= product.genre.name %></td>
							<td><%= product.price %></td>
							<td><%= product.status %></td>
						</tr>
					  <% end %>
					  <% end %>
				  </tbody>
				


				</table>
				</div>
			</div>
		</div>
	</div>
</div>
