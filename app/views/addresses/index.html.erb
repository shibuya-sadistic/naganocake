	<div class="row">
		<h3 class="customer-address">配送先登録/一覧</h3>

		<%= form_for @address, method: :post, url: '/addresses' do |f| %>

		<form>
            <div class="h-adr">
            	<span class="p-country-name" style="display:none;">Japan</span>
            	<input type="hidden" class="p-country-name">

				<div class="form-group row">
    	    	    <%= f.label :郵便番号（ハイフンなし）, class: "col-md-2" %>
        	    	<%= f.text_field :postcode, class: "form-control p-postal-code", style: "display: inline-block; width:auto;" %>
            	</div>

	            <div class="form-group row">
    		        <%= f.label :住所, class: "col-md-2" %>
        		    <%= f.text_field :address,  class: "form-control p-region p-locality p-street-address p-extended-address", style: "display: inline-block; width:50%;" %>
            	</div>

	            <div class="form-group row">
    		        <%= f.label :宛先, class: "col-md-2" %>
        		    <%= f.text_field :destination,  class: "form-control", style: " display: inline-block; width:auto;" %>
        		    <button class="btn btn-success col-md-offset-4" type="submit">登録する</button>
    			</div>
    		</div>
    	</form>
        <% end %>
    </div>


	<div class="address-lists row">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th class="active col-sm-1">郵便番号</th>
					<th class="active col-sm-4">住所</th>
					<th class="active col-sm-1">宛名</th>
					<th class="active col-sm-2"></th>
				</tr>
			</thead>
			<tbody>
				<% if @addresses.present? %>
	 			<% @addresses.each do |address| %>
					<tr>
						<td><%= address.postcode %></td>
						<td><%= address.address %></td>
						<td><%= address.destination %></td>
						<td><%= link_to edit_address_path(address) do %>
								<button class="btn btn-primary col-sm-offset-1" type="submit">編集する</button><% end %>
							<%= link_to address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか?" do %>
								<button class="btn btn-danger col-sm-offset-1" type="submit">削除する</button><% end %>
						</td>
					</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>