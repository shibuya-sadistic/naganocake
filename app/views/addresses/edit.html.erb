<div class="container">
	<div class="row">
		<h3>配送先編集</h3>
	</div>

	<div class="row">
		<%= form_for @address do |f| %>
			<div class="form-group row">
    	        <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-2" %>
        	    <%= f.text_field :postcode, class: "col-sm-3" %>
            </div>

            <div class="form-group row">
    	        <%= f.label :住所, class: "col-sm-2" %>
        	    <%= f.text_field :address, class: "col-sm-6" %>
            </div>

            <div class="form-group row">
    	        <%= f.label :宛先, class: "col-sm-2" %>
        	    <%= f.text_field :destination, class: "col-sm-3" %>
    			<button class="btn btn-primary col-sm-offset-4 col-sm-2" type="submit">編集する</button>
    		</div>
         <% end %>
    </div>
</div>